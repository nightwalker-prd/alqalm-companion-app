        { "arabic": "الْمُدَرِّسُ فِي الْفَصْلِ", "english": "The teacher is in the classroom" },
        { "arabic": "الْبَيْتُ كَبِيرٌ وَجَمِيلٌ", "english": "The house is big and beautiful" }
      ]
